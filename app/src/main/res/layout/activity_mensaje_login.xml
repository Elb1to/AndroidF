<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".components.auth.AuthMessageActivity"
    android:background="@color/MoradoFondo"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="80dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            >

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Ciclo De Vida Del Software"-->
<!--                android:textColor="@color/white"-->
<!--                android:textFontWeight="900"-->
<!--                android:textStyle="bold"-->
<!--                android:textSize="20dp"-->
<!--                />-->
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="80dp"
            android:textStyle="italic"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:id="@+id/txtNombreLogin"
            android:gravity="center"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="Menu"
            android:text="Ir Al Menu Principal"
            android:textSize="20dp"
            android:layout_marginTop="-29.8dp"
            android:layout_marginBottom="10dp"
            app:cornerRadius="5dp"
            app:strokeColor="#0026f0"
            android:textColor="@color/white"
            android:background="@color/Morado"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/logo_utp"
            android:background="@drawable/rounded_item"
            android:backgroundTint="@color/white"
            android:onClick="utpLogo"/>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/logo_fisc"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rounded_item"
            android:backgroundTint="@color/white"
            android:onClick="fiscLogo"/>

    </LinearLayout>

</LinearLayout>