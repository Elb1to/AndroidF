<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gg.rubit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rubit"
        android:usesCleartextTraffic="true">

        <activity
            android:name="gg.rubit.components.lessons.VideoLessonActivity"
            android:exported="false" />
        <activity
            android:name=".perfilactivity"
            android:exported="false" />
        <activity
            android:name="gg.rubit.components.lessons.ConversationActivity"
            android:exported="false" />
        <activity
            android:name="gg.rubit.ui.tutorial.TutorialUI"
            android:exported="false" />
        <activity
            android:name="gg.rubit.ui.tutorial.TutorialMainActivity"
            android:exported="false" />
        <activity
            android:name="gg.rubit.ui.loading.LoadingUI"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="gg.rubit.components.auth.AuthMessageActivity" />
        <activity android:name="gg.rubit.components.auth.RegisterActivity" />
        <activity android:name="gg.rubit.components.auth.PasswordRecoveryActivity" />
        <activity android:name="gg.rubit.components.auth.LoginActivity" />
    </application>
</manifest>